auto br0
iface br0 inet static
  address 192.168.0.81
  netmask 255.255.255.0
  gateway 192.168.0.1
  dns-nameservers 194.168.4.100
  dns-nameservers 194.168.8.100
  bridge_ports eth0
  up ethtool -s eth0 wol g && \
    echo "1" > /proc/sys/net/ipv4/ip_forward

