/*jslint node: true, nomen: true */
'use strict';
/*global p2*/

// make parent node_modules available to sync'd manifest
module.paths = module.paths.concat(module.parent.paths);

var Mustache = require('mustache'),
    console = require('better-console'),
    mysql = require('mysql'),
    Q = require('q'),
    u = require('util'),
    pfs = new (p2.require('pfs'))();

p2

/**
 * p2
 * .add_fact('fact_name', {
 *   hidden: true|false, // hide value from log output
 *   file: filename,  // or
 *   value: value,    // or
 *   url: url,  // TODO, or
 * })
 *
 */
.role('add_fact', {
  p2: function (title, opts) {
    var deferred = Q.defer(),
        opts_deferred = Q.defer();

    if (opts.value) {
      opts_deferred.resolve(opts.value);

    } else if (opts.file) {

      opts.file = Mustache.render(opts.file, {
        title: title,
        opts: opts,
        f: p2.facts
      });

      pfs.pReadFile(opts.file)
      .then(function (data) {
        if (data) {
          data = data.toString().trim();
        }
        opts_deferred.resolve(data);
      });

    }

    opts_deferred
    .promise
    .done(function (data) {
      if (data !== undefined) {

        if (typeof(data) === 'string') {
          data = Mustache.render(data, {
            title: title,
            opts: opts,
            f: p2.facts
          });
        }

        p2.facts[title] = data;
        console.info(u.format('Added fact "%s" = "%s"', title, (opts.hidden ? '**********' : data)));
      } else {
        delete p2.facts[title];
      }
      deferred.resolve();

    }, function (err) {
      deferred.reject(err);
    });

    return deferred.promise;

  }
});
